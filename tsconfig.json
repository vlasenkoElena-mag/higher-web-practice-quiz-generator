{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noEmit": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@models/*": ["src/components/models/*"],
			"@view/*": ["src/components/view/*"],
			"@presenters/*": ["src/components/presenters/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
